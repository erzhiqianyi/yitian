<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.buniaowanfeng.ui.activity.SingleAppDetailActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/app_daily_head"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/multiple_background"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        >
            <RelativeLayout
                android:padding="5dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/head"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/daily_app_icon"
                    android:layout_centerVertical="true"
                    android:layout_width="56dp"
                    android:layout_height="56dp"/>
                <TextView
                    android:layout_toRightOf="@id/daily_app_icon"
                    android:layout_centerVertical="true"
                    android:id="@+id/daily_app_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/daily_change_app"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_right_ccc"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>
            </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/hint_empty"
        android:padding="16dp"
        android:text="@string/hint_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/app_daily_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
